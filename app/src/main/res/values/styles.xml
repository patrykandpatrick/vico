    <style name="AxisStyle">
        <item name="axisLineStyle">@style/AxisLineStyle</item>
        <item name="axisGuidelineStyle">@style/AxisLineStyle</item>
        <item name="axisTickStyle">@style/AxisLineStyle</item>
