<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".app.MainActivity">

    <pl.patrykgoworowski.vico.view.dataset.DataSetView
        android:id="@+id/column_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:axisStyle="@style/AxisStyle"
        app:chartType="column|line"
        app:columnChartStyle="@style/ColumnChartStyle"
        app:lineChartStyle="@style/LineChartStyle"
        app:chartHorizontalScrollingEnabled="true"
        app:showBottomAxis="true"
        app:showEndAxis="true"
        app:showStartAxis="true" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="16dp" />

    <pl.patrykgoworowski.vico.view.dataset.DataSetView
        android:id="@+id/composed_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:columnChartStyle="@style/ColumnChartStyle"
        app:chartHorizontalScrollingEnabled="true"
        app:chartType="column" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="16dp" />

    <pl.patrykgoworowski.vico.view.dataset.DataSetView
        android:id="@+id/line_chart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:lineChartStyle="@style/LineChartStyle"
        app:chartHorizontalScrollingEnabled="true"
        app:chartType="line" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="16dp" />

    <pl.patrykgoworowski.vico.view.dataset.DataSetView
        android:id="@+id/grouped_column_chart"
        app:chartHorizontalScrollingEnabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Space
        android:layout_width="wrap_content"
        android:layout_height="16dp" />

    <pl.patrykgoworowski.vico.view.dataset.DataSetView
        android:id="@+id/stacked_column_chart"
        app:chartHorizontalScrollingEnabled="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>