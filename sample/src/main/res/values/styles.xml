<resources>

    <style name="ColumnChartStyle">
        <item name="column1">@style/Column1Style</item>
        <item name="column2">@style/Column2Style</item>
        <item name="column3">@style/Column3Style</item>
    </style>

    <style name="Column1Style">
        <item name="color">?colorPrimary</item>
    </style>

    <style name="Column2Style">
        <item name="color">?colorSecondary</item>
    </style>

    <style name="Column3Style">
        <item name="color">?colorTertiary</item>
    </style>

    <style name="LineChartStyle">
        <item name="line1spec">@style/Line1SpecStyle</item>
        <item name="line2spec">@style/Line2SpecStyle</item>
        <item name="line3spec">@style/Line3SpecStyle</item>
    </style>

    <style name="Line1SpecStyle">
        <item name="color">?colorPrimary</item>
    </style>

    <style name="Line2SpecStyle">
        <item name="color">?colorSecondary</item>
    </style>

    <style name="Line3SpecStyle">
        <item name="color">?colorTertiary</item>
    </style>

    <style name="StackedColumnChartAxisStyle">
        <item name="axisGuidelineStyle">@style/SolidAxisGuidelineStyle</item>
        <item name="axisLabelStyle">@style/RotatedLabelStyle</item>
    </style>

    <style name="RotatedLabelStyle">
        <item name="labelRotation">45</item>
    </style>

    <style name="SolidAxisGuidelineStyle">
        <item name="shapeStyle">@style/SolidShapeStyle</item>
    </style>

    <style name="SolidShapeStyle">
        <item name="dashLength">0dp</item>
        <item name="dashGapLength">0dp</item>
    </style>

    <style name="ComposedColumnChartStyle">
        <item name="column1">@style/CutColumnStyle</item>
        <item name="column2">@style/CutColumnStyle</item>
        <item name="column3">@style/CutColumnStyle</item>
    </style>

    <style name="CutColumnStyle">
        <item name="color">?colorPrimary</item>
        <item name="shapeStyle">@style/CutShapeStyle</item>
    </style>

    <style name="CutShapeStyle">
        <item name="topStartCornerSize">50%</item>
        <item name="topStartCornerTreatment">cut</item>
    </style>

    <style name="LineChartWithLabelsInsideAxisStyle">
        <item name="verticalAxisHorizontalLabelPosition">inside</item>
    </style>
</resources>
