<resources>
    <color name="basic_scatter_chart_line_1_color">#916cda</color>

    <style name="BasicScatterChartPointShapeStyle">
        <item name="cornerSize">50%</item>
        <item name="cornerTreatment">rounded</item>
    </style>

    <style name="BasicScatterChartPoint1Style">
        <item name="android:color">@color/basic_scatter_chart_line_1_color</item>
        <item name="shapeStyle">@style/BasicScatterChartPointShapeStyle</item>
    </style>

    <style name="BasicScatterChartLine1Style">
        <item name="android:color">#00ee2b2b</item>
        <item name="pointStyle">@style/BasicScatterChartPoint1Style</item>
    </style>

    <style name="BasicScatterChartLineLayerStyle">
        <item name="line1Style">@style/BasicScatterChartLine1Style</item>
        <item name="line2Style">@style/BasicScatterChartLine1Style</item>
    </style>

    <style name="BasicScatterChartChartStyle">
        <item name="layers">line</item>
        <item name="lineLayerStyle">@style/BasicScatterChartLineLayerStyle</item>
        <item name="showBottomAxis">true</item>
        <item name="showStartAxis">true</item>
    </style>
</resources>
