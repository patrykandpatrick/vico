<resources>
    <attr name="lineChartStyle" format="reference" />

    <declare-styleable name="LineChartStyle">
        <attr name="color" />
        <attr name="gradientTopColor" format="color" />
        <attr name="gradientBottomColor" format="color" />
        <attr name="pointSize" format="dimension" />
        <attr name="spacing" format="dimension" />
        <attr name="lineThickness" format="dimension" />
        <attr name="pointStyle" format="reference" />
        <attr name="cubicStrength" format="fraction"/>
    </declare-styleable>

    <declare-styleable name="ComponentStyle">
        <attr name="color"/>
        <attr name="shapeStyle" />
        <attr name="overlayingComponentStyle" format="reference"/>
        <attr name="overlayingComponentPadding" format="dimension"/>
    </declare-styleable>
</resources>